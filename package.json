{
  "name": "example-llm-developer-project",
  "version": "1.0.0",
  "description": "A framework for collaborative content creation and management",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "ctx:sync": "python repo_src/scripts/export_context.py",
    "registry:update": "pnpm ctx:sync",
    "chat": "python repo_src/scripts/chat.py",
    "chat:verbose": "python repo_src/scripts/chat.py --verbose",
    "diagrams:generate": "python repo_src/scripts/generate_diagrams.py",
    "refresh-docs": "pnpm registry:update && pnpm diagrams:generate",
    "dev": "turbo run dev",
    "dev:frontend": "turbo run dev --filter=@workspace/frontend",
    "dev:backend": "turbo run dev --filter=@workspace/backend",
    "dev:scheduler": "source .venv/bin/activate && python repo_src/backend/scheduler/main.py",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "coverage": "turbo run coverage",
    "e2e": "concurrently -k \"pnpm --filter frontend run dev\" \"cd repo_src/backend && source venv/bin/activate && uvicorn repo_src.backend.main:app --reload --app-dir ../..\" \"playwright test\"",
    "reset": "./repo_src/scripts/reset-ports.sh",
    "dev:clean": "pnpm reset && pnpm dev",
    "setup-env": "./repo_src/scripts/setup-env.sh",
    "setup-env:force": "./repo_src/scripts/setup-env.sh -f",
    "setup-project": "pnpm install && python -m venv .venv && . .venv/bin/activate && pip install -r repo_src/backend/requirements.txt && pnpm setup-env",
    "ci": "pnpm lint && pnpm typecheck && pnpm test",
    "docs:serve": "mkdocs serve",
    "docs:build": "mkdocs build",
    "data:combine": "python repo_src/scripts/combine_sources.py",
    "index:sync": "python -m repo_src.scripts.sync_index",
    "index:tag": "python -m repo_src.scripts.tag_index",
    "index:tag-limit": "python -m repo_src.scripts.tag_index --limit 50",
    "index:tag-obsidian": "python -m repo_src.scripts.tag_index --source obsidian",
    "index:tag-notion": "python -m repo_src.scripts.tag_index --source notion",
    "index:tag-discord": "python -m repo_src.scripts.tag_index --source discord",
    "index:full-sync": "pnpm data:combine && pnpm index:sync && echo 'âœ… Run pnpm index:tag to generate descriptions and tags'",
    "obsidian:sync": "./repo_src/scripts/sync-obsidian.sh",
    "obsidian:sync-incremental": "./repo_src/scripts/sync-obsidian-incremental.sh",
    "obsidian:watch": "./repo_src/scripts/watch-obsidian.sh",
    "obsidian:watch-smart": "./repo_src/scripts/watch-obsidian-smart.sh",
    "obsidian:link": "echo 'Usage: ln -s /path/to/your/obsidian/vault repo_src/backend/documents' && echo 'Replace current: mv repo_src/backend/documents repo_src/backend/documents_backup && ln -s /path/to/your/obsidian/vault repo_src/backend/documents'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.9.0",
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@types/node": "^22.15.3",
    "concurrently": "^8.2.2",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "turbo": "^1.12.3",
    "typescript": "^5.8.3"
  },
  "workspaces": [
    "repo_src/*"
  ]
}
